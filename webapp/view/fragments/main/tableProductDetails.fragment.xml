<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:Table="sap.ui.table"
>
    <IconTabBar
        id="id.main.IconTabBar"
        headerMode="Standard"
        stretchContentHeight="true"
        select=".onFilterSelect"
        class="sapUiResponsiveContentPadding sapUiLargeMarginBottom"
    >
        <items>
            <IconTabFilter
                id="id.main.IconTabFilter"
                icon="sap-icon://expand-all"
                count="{count>/Total}"
                text="{i18n.main>main.IconTabFilter.requests}"
                key="All"
            />
            <IconTabFilter
                id="id.main.ITFZoho"
                icon="sap-icon://mirrored-task-circle"
                iconColor="Contrast"
                count=""
                text="{i18n.main>main.IconTabFilter.zoho}"
                key="Zoho"
            />
            <IconTabSeparator id="id.main.ICS" />
            <IconTabFilter
                id="id.main.ITFOnGoing"
                icon="sap-icon://lateness"
                iconColor="Contrast"
                count="{count>/onGoing}"
                text="{i18n.main>main.IconTabFilter.onGoing}"
                key="OnGoing"
            />
            <IconTabFilter
                id="id.main.ITFApproved"
                icon="sap-icon://accept"
                iconColor="Positive"
                count="{count>/Approved}"
                text="{i18n.main>main.IconTabFilter.approved}"
                key="Approved"
            />
            <IconTabFilter
                id="id.main.ITFRejected"
                icon="sap-icon://decline"
                iconColor="Negative"
                count="{count>/Rejected}"
                text="{i18n.main>main.IconTabFilter.rejected}"
                key="Rejected"
            />
            <IconTabFilter
                id="id.main.ITFDelay"
                icon="sap-icon://alert"
                iconColor="Critical"
                count="{count>/Delayed}"
                text="{i18n.main>main.IconTabFilter.delay}"
                key="Delay"
            />
        </items>
        <content>
            <fb:FilterBar
                id="id.FilterBar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                showFilterConfiguration="false"
                visible="{modelVisibleFlag>/Visible}">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="SalesOffice"
                        label="Sales Office"
                        groupName="Group1"
                        mandatory="true"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                id="id.SalesOffice.Input"
                                placeholder="Sales Office"
                                showValueHelp="true"
                                valueHelpRequest="onSalesOfficeHelp"
                                change="onSalesOfficeInputSubmit"
                                submit="onSearch"
                                textFormatMode="ValueKey"
                                showSuggestion="true"
                                showTableSuggestionValueHelp="false"
                                suggest=".onSuggest"
                                suggestionRows="{JSONModelForSuggest>/}"
                                suggestionItemSelected="onSalesOfficeSuggestionSelect"
                            >
                                <suggestionColumns>
                                    <Column
                                        popinDisplay="Inline"
                                        demandPopin="true"
                                    >
                                        <Label text="Sales Office Code" />
                                    </Column>
                                    <Column
                                        popinDisplay="Inline"
                                        demandPopin="true"
                                    >
                                        <Label text="Sales Office Name" />
                                    </Column>

                                    <!-- <core:Item
                        text="{JSONModelForSuggest_custCode>DomvalueL}"
                        key="{JSONModelForSuggest_custCode>Ddtext}"
                    /> -->
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label
                                            text="{JSONModelForSuggest>DomvalueL}"
                                        />
                                        <Label
                                            text="{JSONModelForSuggest>Ddtext}"
                                        />
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="PafNo"
                        label="Paf No"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                id="id.PafNo.Input"
                                placeholder="PAF No."
                                submit="onSearch"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        name="date"
                        label="Date"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <!-- Start: Date001 -->
                            <!-- Old -->
                            <!-- <DatePicker
                                id="id.Date.DatePicker"
                                valueFormat="MM/dd/yyyy"
                                displayFormat="dd/MM/YYYY"
                                change="onSearch"
                                placeholder="e.g: 31/12/2020"
                            /> -->
                            <!-- New -->
                            <DateRangeSelection
                                value="{
                                        'type': 'sap.ui.model.type.DateInterval',
                                        'formatOptions': {
                                            'pattern': 'dd/MM/YYYY'
                                        },
                                        'parts': [
                                            {
                                                'type': 'sap.ui.model.type.Date',
                                                'path': 'dateRange>/start'
                                            },
                                            {
                                                'type': 'sap.ui.model.type.Date',
                                                'path': 'dateRange>/end'
                                            }
                                        ]
                                    }"
                            />
                            <!-- End: Date001 -->
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Customer Code"
                        label="{i18nV2>view2.simpleForm.label.custCode}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                id="idV1InpCustCode"
                                value="{JSONModelPayload>/Kunnr}"
                                valueStateText="Enter {i18nV2>view2.simpleForm.label.custCode}"
                                showValueHelp="true"
                                valueHelpRequest="onCustomerCodeHelp"
                                class="sapUiSmallMarginEnd"
                                placeholder="{i18nV2>view2.simpleForm.label.custCode}"
                                editable="{GlobalModel>/Editable}"
                                textFormatMode="ValueKey"
                                showSuggestion="true"
                                showTableSuggestionValueHelp="false"
                                suggest=".onSuggest_custCode"
                                suggestionRows="{JSONModelForSuggest_custCode>/}"
                                suggestionItemSelected="onCustomerCodeInputSuggestionSelect"
                                submit="onSearch"
                                change="onCustomerCodeInputChange"
                                liveChange="onCustomerCodeLiveChange"
                            >
                                <suggestionColumns>
                                    <Column
                                        popinDisplay="Inline"
                                        demandPopin="true"
                                    >
                                        <Label text="Customer Code" />
                                    </Column>
                                    <Column
                                        popinDisplay="Inline"
                                        demandPopin="true"
                                    >
                                        <Label text="Customer Name" />
                                    </Column>

                                    <!-- <core:Item
                                        text="{JSONModelForSuggest_custCode>DomvalueL}"
                                        key="{JSONModelForSuggest_custCode>Ddtext}"
                                    /> -->
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label
                                            text="{JSONModelForSuggest_custCode>DomvalueL}"
                                        />
                                        <Label
                                            text="{JSONModelForSuggest_custCode>Ddtext}"
                                        />
                                    </ColumnListItem>
                                </suggestionRows>
                            </Input>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Vertical"
                        label="Vertical"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Select
                                id="idV1SLVertical"
                                forceSelection="false"
                            >
                                <core:Item
                                    key="10"
                                    text="Johnson"
                                />
                                <core:Item
                                    key="20"
                                    text="Porselano"
                                />
                                <core:Item
                                    key="30"
                                    text="Marbonite"
                                />
                                <core:Item
                                    key="40"
                                    text="Endura"
                                />
                            </Select>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>

                <!-- <fb:FilterGroupItem>
                <fb:FilterGroupItem
                            name="Vertical"
                            label="{i18nV2>view2.simpleForm.label.vertical}"
                            groupName="Group1"
                            visibleInFilterBar="true"
                        >
                        <fb:control>
                <Select
                    id="idV2SLVertical"
                    forceSelection="false"
                    items="{LocalJSONModels>/vertical}"
                    selectedKey="{JSONModelPayload>/Spart}"
                    valueStateText="Select {i18nV2>view2.simpleForm.label.vertical}"
                    editable="{GlobalModel>/Editable}"
                    change="onVerticalSelectChange"
                >
                    <core:Item
                        id="idV2SLItemVertical"
                        key="{LocalJSONModels>key}"
                        text="{LocalJSONModels>text}"
                    />
                </Select>
                </fb:control>
                </fb:FilterGroupItem>
                </fb:filterGroupItems>
                -->
            </fb:FilterBar>

            <!-- Start: tableSort001 -->
            <!-- Old -->
            <Table
                id="id.main.Products.Table"
                alternateRowColors="true"
                mode="{oGlobleModel>/mode}"
                growing="true"
                headerText="{i18n.main>main.table.headerText}"
                items="{ModelForTable>/}"
                sticky="ColumnHeaders,HeaderToolbar"
                visible="false" >
                <headerToolbar>
                    <OverflowToolbar
                        id="id.main.TblOT"
                        design="Transparent"
                        width="100%"
                    >
                        <content>
                            <Title
                                id="id.main.TblTitle"
                                text="{i18n.main>main.table.title}"
                                level="H2"
                            />

                            <ToolbarSpacer id="id.main.TblTS" />
                            <Input
                                id="id.orderNumber.Input"
                                placeholder="Search PAF No"
                                submit="onOrderNumber"
                                liveChange="onOrderNumber"
                                width="15%"
                            >
                                <layoutData>
                                    <OverflowToolbarLayoutData
                                        priority="NeverOverflow"
                                    />
                                </layoutData>
                            </Input>
                            <Button
                                id="id.main.TblBtnNew"
                                text="Add New"
                                icon="sap-icon://add"
                                type="Accept"
                                press="onNewPress"
                            />
                            <Button
                                id="id.main.TblBtnDelet"
                                text="Delete"
                                icon="sap-icon://delete"
                                press="_onDelete"
                                type="Reject"
                                visible="false"
                            />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        id="id.main.TblClmOrderNo"
                        hAlign="End"
                        width="4rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtOrderNo"
                            text="{i18n.main>main.table.column.text.ordNo}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmRegion"
                        hAlign="Center"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="10rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtRegion"
                            text="{i18n.main>main.table.column.text.region}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmCustomer"
                        hAlign="Center"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="14rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtCustomer"
                            text="{i18n.main>main.table.column.text.customer}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmCustNo"
                        hAlign="Center"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="5.5rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtCustNo"
                            text="{i18n.main>main.table.column.text.custNo}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmVertical"
                        hAlign="Center"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="5rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtVertical"
                            text="{i18n.main>main.table.column.text.vertical}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmTypeOfOrder"
                        hAlign="Center"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="8rem"
                    >
                        <Label
                            wrapping="true"
                            text="{i18n.main>main.table.column.text.typeOfOrder}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmTotalOrder"
                        hAlign="End"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="5rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtTotalOrder"
                            text="{i18n.main>main.table.column.text.totalOrder}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmCurrOrder"
                        hAlign="End"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="5rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtCurrOrder"
                            text="{i18n.main>main.table.column.text.currentOrder}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmReqDate"
                        hAlign="Center"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        width="6rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtReqDate"
                            text="{i18n.main>main.table.column.text.requestedDate}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmDiscount"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Center"
                        width="5rem"
                    >
                        <Label
                            wrapping="true"
                            text="{i18n.main>main.table.column.text.pending}"
                        />
                    </Column>
                    <Column
                        id="id.main.TblClmStatus"
                        hAlign="Center"
                        width="6rem"
                    >
                        <Label
                            wrapping="true"
                            id="id.main.TblClmTxtStatus"
                            text="{i18n.main>main.table.column.text.status}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="id.main.TblCLI"
                        vAlign="Middle"
                        press="onClickofItem"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="idV1TblCLITxtOrdNo"
                                text="{path:'ModelForTable>Pafno',  formatter:'sap.formatter.removeLeadingZeros'}"
                            />
                            <Text
                                id="idV1TblCLITxtRegion"
                                text="{ModelForTable>Soname}({ModelForTable>Vkbur})"
                            />
                            <Text
                                id="idV1TblCLITtCustomer"
                                text="{ModelForTable>Name}"
                            />
                            <Text
                                id="idV1TblCLITxtCustId"
                                text="{ModelForTable>Kunnr}"
                            />
                            <Text
                                id="idV1TblCLITxtVertical"
                                text="{path:'ModelForTable>Spart',  formatter:'sap.formatter.showVerticalText'}"
                            />
                            <Text
                                id="idV1TblCLITxtOrdType"
                                text="{path:'ModelForTable>Vtweg',  formatter:'sap.formatter.showOrderType'}"
                            />

                            <Text
                                id="idV1TblCLITxtOrdTot"
                                text="{ModelForTable>WtotalVol}"
                            />
                            <Text
                                id="idV1TblCLITxtOrdCur"
                                text="{ModelForTable>WcurVolFt}"
                            />
                            <Text
                                id="idV1TblCLITxtReqDate"
                                text="{ parts: ['ModelForTable>Erdat'], formatter: 'sap.formatter.getFormattedDate' }"
                            />
                            <Text
                                id="idV1TblCLITxtDisPer"
                                text="{ModelForTable>Role}"
                            />
                            <tnt:InfoLabel
                                text="{ parts: ['ModelForTable>Status', 'ModelForTable>Erdat'], formatter: 'sap.formatter.getStatus' }"
                                renderMode="Loose"
                                colorScheme="{ parts: ['ModelForTable>Status'], formatter: 'sap.formatter.getStatusColor' }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <!-- New -->
            <Table:Table id="table"
                selectionMode="{oGlobleModel>/rowMode}"
                rows="{ModelForTable>/}"
                ariaLabelledBy="title"
                rowSelectionChange="onClickofItem"
                selectionBehavior="{oGlobleModel>/selBehavior}" >
                <Table:extension>
                    <OverflowToolbar design="Transparent" width="100%">
                        <content>
                            <Title text="{i18n.main>main.table.title}" level="H2" />

                            <ToolbarSpacer />
                            <Input placeholder="Search PAF No" submit="onOrderNumber" liveChange="onOrderNumber" width="15%" >
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow" />
                                </layoutData>
                            </Input>
                            <Button text="Add New" icon="sap-icon://add" type="Accept" press="onNewPress" />
                            <Button text="Delete" icon="sap-icon://delete" press="_onDelete" type="Reject" visible="{oGlobleModel>/deleteButton}" />
                        </content>
                    </OverflowToolbar>
                </Table:extension>

                <Table:columns>
                    <Table:Column id="Pafno" sortProperty="Pafno" >
                        <Label text="{i18n.main>main.table.column.text.ordNo}" wrapping="true" />
                        <Table:template>
                            <Text text="{path:'ModelForTable>Pafno',  formatter:'sap.formatter.removeLeadingZeros'}" wrapping="false" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Soname" sortProperty="Soname" width="8rem" >
                        <Label text="{i18n.main>main.table.column.text.region}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>Soname}({ModelForTable>Vkbur})" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Name" sortProperty="Name" width="16rem" >
                        <Label text="{i18n.main>main.table.column.text.customer}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>Name}" wrapping="true" />
                        </Table:template>
                    </Table:Column>
                   
                    <Table:Column id="Kunnr" sortProperty="Kunnr" >
                        <Label text="{i18n.main>main.table.column.text.custNo}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>Kunnr}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Spart" sortProperty="Spart" >
                        <Label text="{i18n.main>main.table.column.text.vertical}" wrapping="true" />
                        <Table:template>
                            <Text text="{path:'ModelForTable>Spart',  formatter:'sap.formatter.showVerticalText'}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Vtweg" sortProperty="Vtweg" >
                        <Label text="{i18n.main>main.table.column.text.typeOfOrder}" wrapping="true" />
                        <Table:template>
                            <Text text="{path:'ModelForTable>Vtweg',  formatter:'sap.formatter.showOrderType'}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="WtotalVol" sortProperty="WtotalVol" >
                        <Label text="{i18n.main>main.table.column.text.totalOrder}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>WtotalVol}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="WcurVolFt" sortProperty="WcurVolFt" >
                        <Label text="{i18n.main>main.table.column.text.currentOrder}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>WcurVolFt}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Erdat" sortProperty="Erdat" >
                        <Label text="{i18n.main>main.table.column.text.requestedDate}" wrapping="true" />
                        <Table:template>
                            <Text text="{ parts: ['ModelForTable>Erdat'], formatter: 'sap.formatter.getFormattedDate' }" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Pendingat" sortProperty="Pendingat">
                        <Label text="{i18n.main>main.table.column.text.pending}" wrapping="true" />
                        <Table:template>
                            <Text text="{ModelForTable>Role}" />
                        </Table:template>
                    </Table:Column>

                    <Table:Column id="Status" sortProperty="Status" width="6rem" >
                        <Label text="{i18n.main>main.table.column.text.status}"  wrapping="true" />
                        <Table:template>
                            <tnt:InfoLabel text="{ parts: ['ModelForTable>Status', 'ModelForTable>Erdat'], formatter: 'sap.formatter.getStatus' }"
                                colorScheme="{ parts: ['ModelForTable>Status'], formatter: 'sap.formatter.getStatusColor' }" />
                        </Table:template>
                    </Table:Column>

                     <Table:Column id="actalPrice" sortProperty="actualDis" width="6rem" >
                        <Label text="{i18n.main>main.table.column.text.actualDis}" wrapping="true" />
                        <Table:template>
                            <tnt:InfoLabel text="{ parts: ['ModelForTable>actualDis', 'ModelForTable>Erdat'], formatter: 'sap.formatter.getStatus' }"
                                colorScheme="{ parts: ['ModelForTable>actualDis'], formatter: 'sap.formatter.getStatusColor' }" />
                        </Table:template>
                    </Table:Column>

                     <Table:Column id="approvedDis" sortProperty="approveDis" width="6rem" >
                        <Label text="{i18n.main>main.table.column.text.approveDis}" wrapping="true"/>
                        <Table:template>
                            <tnt:InfoLabel text="{ parts: ['ModelForTable>approveDis', 'ModelForTable>Erdat'], formatter: 'sap.formatter.getStatus' }"
                                colorScheme="{ parts: ['ModelForTable>approveDis'], formatter: 'sap.formatter.getStatusColor' }" />
                        </Table:template>
                    </Table:Column>

                </Table:columns>
            </Table:Table>
            <!-- End: tableSort001 --> 
        </content>
    </IconTabBar>
</core:FragmentDefinition>
