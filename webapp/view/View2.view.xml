<mvc:View
    controllerName="zpj.pro.sk.sd.salesco.zprosalesco.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
>
    <uxap:ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="true"
        showFooter="true"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageHeader id="idV2OPH">
                <!-- Start: createCopy001 -->
                <!-- <Button
                    text="Create copy"
                    press="onCreateCopy"
                    type="Ghost"
                    icon="sap-icon://copy"
                    visible="{GlobalModel>/createCopy}"
                /> -->
                <!-- End: createCopy001 -->
                <Button
                    id="idV2BtnEdit"
                    text="{i18nV2>view2.objectPageLayout.button.edit}"
                    type="Emphasized"
                    press="onEdit"
                    visible="{GlobalModel>/editButton}"
                    icon="sap-icon://edit"
                />

                <!-- <Button
                    id="idV2BtnBack"
                    text="{i18nV2>view2.objectPageLayout.button.back}"
                    press="onBack"
                /> -->
            </uxap:ObjectPageHeader>
        </uxap:headerTitle>
        <uxap:sections>
            <uxap:ObjectPageSection
                id="idV2OPSGenInfo"
                titleUppercase="true"
                title="{i18nV2>view2.sections.generalInfo.title}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubGenInfo"
                        title="{i18nV2>view2.sections.generalInfo.title}"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <core:Fragment
                                id="idV2FragGenInfo"
                                fragmentName="zpj.pro.sk.sd.salesco.zprosalesco.view.fragments.View2.generalInfo"
                                type="XML"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
            <uxap:ObjectPageSection
                id="idV2OPSPrdDetail"
                titleUppercase="true"
                title="{i18nV2>view2.sections.addPrdDetails.title}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubPrdDetail"
                        title="{i18nV2>view2.sections.addPrdDetails.title}"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <core:Fragment
                                id="idV2FragAddPrdDetails"
                                fragmentName="zpj.pro.sk.sd.salesco.zprosalesco.view.fragments.View2.additionalPrdDetails"
                                type="XML"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Summary Detail -->
            <uxap:ObjectPageSection
                id="idV2OPSSumDetail"
                titleUppercase="true"
                title="{i18nV2>view2.sections.sumDetails.title}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubSumDetail"
                        title="{i18nV2>view2.sections.sumDetails.title}"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <core:Fragment
                                id="idV2FragSumDeatil"
                                fragmentName="zpj.pro.sk.sd.salesco.zprosalesco.view.fragments.View2.summaryDetails"
                                type="XML"
                            />
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <!-- Attachment -->
            <uxap:ObjectPageSection
                id="idV2OPSAttach"
                titleUppercase="true"
                title="{i18nV2>view2.sections.attachments.title}"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection
                        id="idV2OPSubAttach"
                        title="{i18nV2>view2.sections.attachments.title}"
                        titleUppercase="true"
                    >
                        <uxap:blocks>
                            <!-- <core:Fragment
                                id="idV2FragAttach"
                                fragmentName="zpj.pro.sk.sd.salesco.zprosalesco.view.fragments.View2.attachments"
                                type="XML"
                            /> -->
                            <!-- Start: newUploader001 -->
                            <VBox>
                                <u:FileUploader
                                    width="50%"
                                    name="myFileUpload"
                                    uploadUrl="upload/"
                                    tooltip="Upload your file to the server"
                                    visible="{oInitModel>/enabled}"
                                    change="handleUploadChange"
                                    multiple="true"
                                /> 
                                <List
                                    width="50%"
                                    items="{oDOAAAttachmentModel>/}"
                                >
                                    <CustomListItem>
                                        <HBox justifyContent="SpaceBetween">
                                            <HBox>
                                                <core:Icon
                                                    size="2rem"
                                                    src="sap-icon://attachment-photo"
                                                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                                />
                                                <VBox
                                                    class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                                    justifyContent="SpaceBetween"
                                                >
                                                    <Text
                                                        text="{oDOAAAttachmentModel>Filename}"
                                                    />
                                                    <Link
                                                        text="Download"
                                                        press="handleDownloadPress"
                                                    />
                                                </VBox>
                                            </HBox>
                                            <Button
                                                icon="sap-icon://decline"
                                                press="removeAttachment"
                                                visible="{= ${oDOAAAttachmentModel>IsNew} }"
                                            />
                                        </HBox>
                                    </CustomListItem>
                                </List>
                            </VBox>
                            <!-- End: newUploader001 -->
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>

        <uxap:footer>
            <Bar id="idV2Bar">
                <contentLeft>
                    <Button
                        id="idV2BtnMessages"
                        class="sapUiTinyMarginBeginEnd"
                        icon="sap-icon://SAP-icons-TNT/message-start-event"
                        type="Attention"
                        text="{i18nV2>view2.footer.button.message}"
                        press="handleMessages"
                        visible="false"
                    >
                        <!-- <customData>
									<BadgeCustomData
										key="badge"
										value="{= ${chatModel>/}.length}"
										visible="true"/>
								</customData> -->
                    </Button>
                    <u:FileUploader
                        id="FileUploaderId"
                        buttonText="Excel Upload"
                        sameFilenameAllowed="true"
                        buttonOnly="true"
                        fileType="XLSX,xlsx"
                        icon="sap-icon://browse-folder"
                        change="onUpload"
                        tooltip="Excel Upload"
                        visible="{myProperties>/new}"
                        style="Emphasized"
                    />
                    <Button
                        id="id.excelExport.Link"
                        text="Download Excel Template"
                        press="onExport"
                        visible="false"
                    />
                </contentLeft>
                <contentRight>
                    <Button
                        id="idV2BtnSave"
                        text="{i18nV2>view2.footer.button.save}"
                        press="onSave"
                        visible="false"
                        type="Accept"
                    />
                    <!-- <Button text="Clear" press="onClear"></Button> -->
                    <Button
                        id="idV2BtnCancel"
                        text="{i18nV2>view2.footer.button.cancel}"
                        press="onCancel"
                        type="Reject"
                    />
                </contentRight>
            </Bar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
